<?xml version="1.0" encoding="utf-8"?>
<Project
    xmlns="http://schemas.microsoft.com/developer/msbuild/2003"
    ToolsVersion="4.0"
    DefaultTargets="Build">

    <PropertyGroup>
        <OutputDir>D:\TESTMSBUILDOUTPUT</OutputDir>
    </PropertyGroup>   	

    <ItemGroup>
        <ProjectToBuild Include="ASPApplication.sln">            
	    <Properties>OutputPath=$(OutputDir);Configuration=Release;Platform=Any CPU;</Properties>
        </ProjectToBuild>
    </ItemGroup>

    <Target Name="Build">
        <Message Text="build MSbuild project file from scratch" />
        <MSBuild Projects="@(ProjectToBuild)"/>	
    </Target>

</Project>